<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_gradient_background"
    tools:context=".screens.HomeActivity">

    <!-- Contenido principal -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- TopBar profesional reutilizable -->
        <include layout="@layout/top_bar"
            android:layout_marginTop="24dp" />

        <!-- Contenido principal debajo del TopBar -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="56dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Card de bienvenida -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/welcome_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    android:layout_marginBottom="24dp"
                    app:cardBackgroundColor="@android:color/white">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/welcome_card_background"
                        android:padding="24dp">

                        <ImageView
                            android:id="@+id/iv_cacao_icon"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@android:drawable/ic_dialog_email"
                            android:tint="#8B4513"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_welcome_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Finca CacaoTech"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#2D1B0E"
                            android:layout_marginStart="16dp"
                            app:layout_constraintStart_toEndOf="@id/iv_cacao_icon"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/iv_cacao_icon" />

                        <!-- Agregados para evitar NullPointerException -->
                        <TextView
                            android:id="@+id/tv_temperature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Temperatura: --°C"
                            android:textColor="#2D1B0E"
                            android:textSize="16sp"
                            app:layout_constraintTop_toBottomOf="@id/tv_welcome_title"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:id="@+id/tv_humidity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Humedad: --%"
                            android:textColor="#2D1B0E"
                            android:textSize="16sp"
                            app:layout_constraintTop_toBottomOf="@id/tv_temperature"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:id="@+id/tv_plants"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Plantas: --"
                            android:textColor="#2D1B0E"
                            android:textSize="16sp"
                            app:layout_constraintTop_toBottomOf="@id/tv_humidity"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="4dp" />
                        <!-- Fin agregados -->

                        <TextView
                            android:id="@+id/tv_welcome_subtitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Sistema de gestión inteligente para cultivos de cacao"
                            android:textSize="14sp"
                            android:textColor="#6D4C36"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="4dp"
                            app:layout_constraintStart_toEndOf="@id/iv_cacao_icon"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_welcome_title" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <!-- Botón para ir al login -->
                <Button
                    android:id="@+id/btnGoToLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Iniciar sesión"
                    android:backgroundTint="#8B4513"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:elevation="4dp" />

                <!-- Grid de opciones principales -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:layout_marginBottom="24dp">

                    <!-- Opción: Usuario -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_user"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/card_user_background"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@android:drawable/ic_menu_my_calendar"
                                android:tint="@android:color/white"
                                android:layout_marginBottom="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Usuario"
                                android:textColor="@android:color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Perfil y configuración"
                                android:textColor="@android:color/white"
                                android:textSize="12sp"
                                android:alpha="0.9"
                                android:textAlignment="center"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Opción: Datos Meteorológicos -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_weather"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/card_weather_background"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@android:drawable/ic_dialog_info"
                                android:tint="@android:color/white"
                                android:layout_marginBottom="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Clima"
                                android:textColor="@android:color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Datos meteorológicos"
                                android:textColor="@android:color/white"
                                android:textSize="12sp"
                                android:alpha="0.9"
                                android:textAlignment="center"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Opción: Reportes -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_reports"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/card_reports_background"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@android:drawable/ic_menu_agenda"
                                android:tint="@android:color/white"
                                android:layout_marginBottom="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Reportes"
                                android:textColor="@android:color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Análisis y estadísticas"
                                android:textColor="@android:color/white"
                                android:textSize="12sp"
                                android:alpha="0.9"
                                android:textAlignment="center"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Opción: Configuración -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_settings"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/card_settings_background"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@android:drawable/ic_menu_preferences"
                                android:tint="@android:color/white"
                                android:layout_marginBottom="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Configuración"
                                android:textColor="@android:color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ajustes del sistema"
                                android:textColor="@android:color/white"
                                android:textSize="12sp"
                                android:alpha="0.9"
                                android:textAlignment="center"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </GridLayout>

                <!-- Card de estadísticas rápidas -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white"
                    android:layout_marginBottom="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estado Actual"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#2D1B0E"
                            android:layout_marginBottom="16dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <!-- Temperatura -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/tv_temperature"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="28°C"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:textColor="#D2691E" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Temperatura"
                                    android:textSize="12sp"
                                    android:textColor="#666666" />

                            </LinearLayout>

                            <!-- Humedad -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/tv_humidity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="75%"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:textColor="#4682B4" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Humedad"
                                    android:textSize="12sp"
                                    android:textColor="#666666" />

                            </LinearLayout>

                            <!-- Plantas -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/tv_plants"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1,250"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:textColor="#228B22" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Plantas"
                                    android:textSize="12sp"
                                    android:textColor="#666666" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <!-- Floating Action Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_quick_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:src="@android:drawable/ic_input_add"
            app:backgroundTint="#8B4513"
            app:tint="@android:color/white"
            app:elevation="8dp" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Panel lateral (Drawer) profesional -->
    <LinearLayout
        android:id="@+id/left_drawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:paddingTop="32dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_gravity="start">

        <TextView
            android:id="@+id/drawer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menú principal"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#8B4513"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/drawer_btn_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usuario"
            android:textColor="#8B4513"
            android:backgroundTint="#f8f9fa"
            android:drawableLeft="@android:drawable/ic_menu_my_calendar"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/drawer_btn_clima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clima"
            android:textColor="#8B4513"
            android:backgroundTint="#f8f9fa"
            android:drawableLeft="@android:drawable/ic_dialog_info"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/drawer_btn_reportes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reportes"
            android:textColor="#8B4513"
            android:backgroundTint="#f8f9fa"
            android:drawableLeft="@android:drawable/ic_menu_agenda"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/drawer_btn_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configuración"
            android:textColor="#8B4513"
            android:backgroundTint="#f8f9fa"
            android:drawableLeft="@android:drawable/ic_menu_preferences"
            android:layout_marginBottom="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/drawer_btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar sesión"
            android:textColor="#FFFFFF"
            android:backgroundTint="#8B4513"
            android:drawableLeft="@android:drawable/ic_lock_power_off"
            android:layout_marginBottom="24dp"
            android:elevation="2dp" />

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
