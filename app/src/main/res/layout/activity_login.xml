<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_gradient_background"
    tools:context=".screens.LoginActivity">

    <!-- Decoración superior -->
    <View
        android:id="@+id/top_decoration"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/circle_decoration_light"
        android:alpha="0.1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-150dp"
        android:layout_marginEnd="-150dp"/>

    <!-- Card contenedor principal -->
    <androidx.cardview.widget.CardView
        android:id="@+id/login_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="56dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="28dp">

            <!-- Logo con contenedor circular -->
            <androidx.cardview.widget.CardView
                android:id="@+id/logo_container"
                android:layout_width="92dp"
                android:layout_height="92dp"
                app:cardCornerRadius="46dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/colorLightBg"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/ivLoginLogo"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/ic_cacao_photo"
                    android:layout_gravity="center"
                    android:contentDescription="Logo cacao"
                    app:tint="@color/colorPrimaryBrown"/>

            </androidx.cardview.widget.CardView>

            <!-- Título de bienvenida -->
            <TextView
                android:id="@+id/tvLoginTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bienvenido"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/colorTextPrimary"
                android:letterSpacing="0.01"
                app:layout_constraintTop_toBottomOf="@id/logo_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="18dp"/>

            <!-- Subtítulo -->
            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicia sesión para administrar tu monitoreo"
                android:textSize="14sp"
                android:textColor="@color/colorTextSecondary"
                android:letterSpacing="0.01"
                app:layout_constraintTop_toBottomOf="@id/tvLoginTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="6dp"/>

            <!-- Container para campos de entrada -->
            <LinearLayout
                android:id="@+id/input_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="22dp">

                <!-- Campo Usuario -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxStrokeColor="@color/colorPrimaryBrown"
                    app:hintTextColor="@color/colorTextSecondary"
                    android:hint="Usuario"
                    app:startIconDrawable="@drawable/ic_humidity"
                    app:startIconTint="@color/colorPrimaryBrown">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:autofillHints="username"
                        android:textSize="16sp"
                        android:padding="14dp"/>

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo Contraseña -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxStrokeColor="@color/colorPrimaryBrown"
                    app:hintTextColor="@color/colorTextSecondary"
                    android:hint="Contraseña"
                    app:startIconDrawable="@drawable/ic_temperature"
                    app:startIconTint="@color/colorPrimaryBrown"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/colorPrimaryBrown"
                    android:layout_marginTop="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:autofillHints="password"
                        android:textSize="16sp"
                        android:padding="14dp"/>

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <!-- Mensaje de error -->
            <TextView
                android:id="@+id/tvError"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#e53e3e"
                android:textSize="14sp"
                android:visibility="gone"
                android:background="@drawable/error_background"
                android:padding="12dp"
                android:drawableStart="@android:drawable/ic_dialog_alert"
                android:drawablePadding="8dp"
                android:drawableTint="#e53e3e"
                app:layout_constraintTop_toBottomOf="@id/input_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="14dp"/>

            <!-- Botón de login -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btn_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="25dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/colorPrimaryBrown"
                app:layout_constraintTop_toBottomOf="@id/tvError"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="18dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="INICIAR SESIÓN"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:background="@android:color/transparent"
                    android:padding="16dp"
                    android:drawableStart="@drawable/ic_history"
                    android:drawablePadding="8dp"
                    android:drawableTint="@android:color/white"/>

            </androidx.cardview.widget.CardView>

            <!-- Enlace para registrarse -->
            <TextView
                android:id="@+id/tvRegisterLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿No tienes cuenta? Regístrate"
                android:textColor="@color/colorPrimaryBrown"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintTop_toBottomOf="@id/btn_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Progress bar para loading -->
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="@color/colorPrimaryBrown"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/tvRegisterLink"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <!-- Decoración inferior -->
    <View
        android:id="@+id/bottom_decoration"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/circle_decoration_light"
        android:alpha="0.08"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="-100dp"
        android:layout_marginStart="-100dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>